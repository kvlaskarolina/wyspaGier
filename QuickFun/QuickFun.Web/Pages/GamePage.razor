@page "/game/{GameTypeString}"

@using QuickFun.Domain.Enums
@using QuickFun.Games
@using QuickFun.Games.Engines
@using QuickFun.Games.Memory
@using QuickFun.Games.Minesweeper
@using QuickFun.Web.Components.Views
@using QuickFun.Games.Engines.Sudoku

@inject IGameFactory GameFactory
@inject NavigationManager Navigation

<div class="game-layout">
    @if (CurrentGame == null)
    {
        <div class="error-container">
            <h2>Nie znaleziono gry</h2>
            <p>Przepraszamy, ale gra "@GameTypeString" nie istnieje lub nie została jeszcze zaimplementowana.</p>
            <a href="/" class="btn btn-secondary">Wróć do menu</a>
        </div>
    }
    else
    {
        <h1 class="game-title">@CurrentGame.Name</h1>

        <div class="game-content">
            @if (CurrentGame is TicTacToeEngine ttt)
            {
                <TicTacToeView Engine="ttt" />
            }
            else if (CurrentGame is MemoryEngine memory)
            {
                <MemoryView Engine="memory" />
            }
            else if (CurrentGame is SudokuEngine sudoku)
            {
                <SudokuView Engine="sudoku" />
            else if (CurrentGame is MinesweeperEngine ms){
                <MinesweeperView Engine="ms" />
            }
            else if (CurrentGame is SnakeEngine snake)
            {
                <div class="snake-placeholder">
                    <h3>Gra Snake</h3>
                    <p>Logika węża zostanie zaimplementowana wkrótce!</p>
                    <p>Aktualny wynik: @snake.Score</p>
                </div>
            }
        </div>

        <div class="controls">
            <button class="btn btn-primary" @onclick="Reset">Restart gry</button>
            <button class="btn btn-secondary" @onclick="GoBack">Powrót do wyspy gier</button>
        </div>
    }
</div>

@code {
    [Parameter]
    public string? GameTypeString { get; set; }

    private IGameEngine? CurrentGame { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (Enum.TryParse<GameType>(GameTypeString, true, out var type))
        {
            CurrentGame = GameFactory.CreateGame(type);
        }
        else
        {
            CurrentGame = null;
        }
    }

    private async Task Reset()
    {
        if (CurrentGame == null) return;
        CurrentGame.Reset();

        if (CurrentGame is MemoryEngine memory)
            await memory.Start(() => InvokeAsync(StateHasChanged));

        if (CurrentGame is SudokuEngine sudoku)
            await sudoku.Start(() => InvokeAsync(StateHasChanged));
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }
}

<style>
    .game-layout {
        max-width: 600px;
        margin: 2rem auto;
        padding: 20px;
        text-align: center;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .game-title {
        color: #333;
        margin-bottom: 1.5rem;
        font-size: 2.5rem;
    }

    .game-content {
        margin: 2rem 0;
        min-height: 300px;
        display: flex;
        flex-direction: colunmn;
        justify-content: center;
        align-items: center;
    }

    .controls {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 2rem;
    }

    .btn {
        padding: 12px 25px;
        border-radius: 8px;
        border: none;
        font-weight: bold;
        cursor: pointer;
        transition: transform 0.1s, background-color 0.2s;
    }

    .btn:active {
        transform: scale(0.95);
    }

    .btn-primary {
        background-color: #28a745;
        color: white;
    }

    .btn-primary:hover {
        background-color: #218838;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        text-decoration: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .snake-placeholder {
        padding: 40px;
        background-color: #e9ecef;
        border-radius: 10px;
        border: 2px dashed #adb5bd;
    }
</style>